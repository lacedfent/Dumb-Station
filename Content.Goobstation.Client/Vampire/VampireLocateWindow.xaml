<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'predator-sense-title'}"
               MinSize="340 420">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  VerticalExpand="True"
                  SeparationOverride="4">
        <LineEdit Name="SearchLineEdit"
                  HorizontalExpand="True"
                  PlaceHolder="{Loc 'vampire-locate-search-placeholder'}" />

        <ScrollContainer VerticalExpand="True"
                         HorizontalExpand="True">
            <BoxContainer Name="TargetsList"
                          Access="Public"
                          Orientation="Vertical"
                          HorizontalExpand="True"
                          VerticalExpand="True"
                          SeparationOverride="2" />
        </ScrollContainer>
    </BoxContainer>
</DefaultWindow>
